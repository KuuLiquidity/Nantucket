{
  "compilerOptions": {
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "allowJs": true,
    "target": "ES2020"
  },
  "include": ["src/**/*"]
}